{
  "root": true,
  "settings": {
    "import/core-modules": ["electron"],
    "import/resolver": {
      "node": {
        "extensions": [".ejs", ".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "plugin:jest/recommended",
    "plugin:promise/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "erb" // extends eslint-config-airbnb, eslint-plugin-compat  eslint-plugin-prettier
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "extraFileExtensions": [".ejs"]
  },
  "ignorePatterns": [
    "node_modules",
    "release/app/dist",
    "release/build",
    ".erb/dll"
  ],
  "rules": {
    "curly": "warn",
    "import/extensions": "off",
    "no-console": "off",
    "no-void": ["error", { "allowAsStatement": true }],
    "vars-on-top": "off",
    "no-unused-expressions": [
      "error",
      { "allowShortCircuit": true, "allowTernary": true }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": ["off", { "extensions": [".jsx", ".tsx"] }],
    "react/function-component-definition": "off", // TODO Change to your preference
    "react/require-default-props": "off",
    "react/no-array-index-key": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/prop-types": "off", // TODO Change React.FC<TYPE_HERE> calls to use (props: TYPE_HERE) => {} instead to fix
    "jsx-a11y/media-has-caption": "off",
    "jsx-a11y/click-events-have-key-events": "warn",
    "jsx-a11y/no-static-element-interactions": "warn"
  }
}

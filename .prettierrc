{
  "tabWidth": 2,
  "endOfLine": "lf",
  "trailingComma": "none",
  "arrowParens": "avoid",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.ejs",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.md",
      "options": {
        "trailingComma": "none"
      }
    }
  ]
}

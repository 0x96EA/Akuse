{
  "name": "Akuse-Beta",
  "version": "1.0.0",
  "description": "Anime streaming client for PC",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder"
  },
  "build": {
    "appId": "Akuse",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/img/icon/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aleganza/akuse.git"
  },
  "author": "aleganza",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/aleganza/akuse/issues"
  },
  "homepage": "https://github.com/aleganza/akuse#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "electron": "^25.2.0",
    "electron-builder": "^24.6.3",
    "uninstall": "^0.0.0"
  },
  "dependencies": {
    "@consumet/extensions": "^1.5.1",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "hls.js": "^1.4.10",
    "jsdom": "^22.1.0"
  }
}

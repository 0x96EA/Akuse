{
  "name": "akuse-beta",
  "version": "1.0.0",
  "description": "Anime streaming client for PC",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.electron.akuse",
    "productName": "Akuse",
    "copyright": "Copyright Â© 2023 aleganza",
    "mac": {
        "target": "dmg",
        "hardenedRuntime": true,
        "gatekeeperAssess": true,
        "extendInfo": {
          "NSAppleEventsUsageDescription": "Let me use Apple Events.",
          "NSCameraUsageDescription": "Let me use the camera.",
          "NSScreenCaptureDescription": "Let me take screenshots."
        }
      },
      "dmg": {
        "iconSize": 100,
        "contents": [
          {
            "x": 255,
            "y": 85,
            "type": "file"
          },
          {
            "x": 253,
            "y": 325,
            "type": "link",
            "path": "/Applications"
          }
        ],
        "window": {
          "width": 500,
          "height": 500
        }
      },
    "win": {
        "target": [
            "nsis"
        ],
        "icon": "assets/img/icon/icon.ico"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    },
    "linux": {
        "desktop": {
          "StartupNotify": "false",
          "Encoding": "UTF-8",
          "MimeType": "x-scheme-handler/deeplink"
        },
        "target": ["AppImage", "deb"]
      },
      "deb": {
        "priority": "optional"
      }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aleganza/akuse.git"
  },
  "author": "aleganza",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/aleganza/akuse/issues"
  },
  "homepage": "https://github.com/aleganza/akuse#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "electron": "^25.8.4",
    "electron-builder": "^24.6.3",
    "uninstall": "^0.0.0"
  },
  "dependencies": {
    "@consumet/extensions": "^1.5.1",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "hls.js": "^1.4.10",
    "jsdom": "^22.1.0"
  }
}
